plugin.tx_bwemail {
	view {
		templateRootPath =
		partialRootPath =
		layoutRootPath =
	}

	settings {
		css = EXT:bw_email/Resources/Public/Css/app.css
		senderAddress = noreply@example.com
		senderName = Example sender name
		replytoAddress =
		subject = Example subject
		template = DefaultMail
		showUid = 1
		recipientAddress =
		recipientCount =
